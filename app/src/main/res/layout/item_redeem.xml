<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/foregroundLayout"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!-- Order Info and Price -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:id="@+id/imagePic"
                    android:src="@mipmap/ic_coffee_foreground" />

                <!-- Cup Icon and Coffee Name -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/coffeeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Americano"
                        android:textSize="16sp"
                        android:textColor="#2D3E50"
                        android:fontFamily="@font/poppinsmed" />

                    <TextView
                        android:id="@+id/orderDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid until 10.01.25"
                        android:textColor="#B0B0B0"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/redeemPts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:backgroundTint="@color/sky"
                android:padding="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="1340 pts"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsmed" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

