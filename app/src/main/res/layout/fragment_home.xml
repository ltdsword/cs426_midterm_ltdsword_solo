<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F8FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="112dp"
        >

        <!-- Top Greeting Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Good morning"
                    android:textColor="#A0A0A0"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Anderson"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:id="@+id/nameText"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/cart"
                android:src="@mipmap/ic_cart_foreground" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/profile"
                android:src="@mipmap/ic_user_foreground" />
        </LinearLayout>

        <!-- Loyalty Card Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/loyal_card_bg"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Loyalty card"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/ltyid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins"
                    android:text="4 / 8"
                    android:layout_marginEnd="16dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_border"
                android:paddingVertical="15dp"
                android:paddingStart="11dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical">

                <!-- Icons (replace with loop in code if dynamic) -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c1"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c2"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c3"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c4"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c5"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c6"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c7"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c8"
                    android:src="@drawable/baseline_coffee_24"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- Coffee Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your coffee"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:cardElevation="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/sky"
            app:strokeWidth="0dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coffeeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                android:background="@color/sky"
                android:layout_margin="16dp"
                android:scrollbars="none" />
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>
</ScrollView>
