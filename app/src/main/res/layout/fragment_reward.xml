<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F8FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="112dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Rewards"
            android:fontFamily="@font/poppinsmed"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- Loyalty Card Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/loyal_card_bg"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmed"
                    android:text="Loyalty card"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/ltyid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppinsmed"
                    android:text="4 / 8"
                    android:layout_marginEnd="16dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_border"
                android:paddingVertical="15dp"
                android:paddingStart="11dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical">

                <!-- Icons (replace with loop in code if dynamic) -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c1"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c2"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c3"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c4"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c5"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c6"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c7"
                    android:src="@drawable/baseline_coffee_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/c8"
                    android:src="@drawable/baseline_coffee_24"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loyal_card_bg"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coffee_beans"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:alpha="0.7"
                android:contentDescription="Decorative coffee beans"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Points:"
                    android:fontFamily="@font/poppinsmed"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2750"
                    android:id="@+id/totalPoints"
                    android:fontFamily="@font/poppinsmed"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Redeem Drinks"
                android:id="@+id/redeemButton"
                android:textSize="11sp"
                android:fontFamily="@font/poppins"
                android:backgroundTint="#25cfaa"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History Rewards"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coffeeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:layout_margin="16dp"
            android:scrollbars="none" />
    </LinearLayout>
</ScrollView>
